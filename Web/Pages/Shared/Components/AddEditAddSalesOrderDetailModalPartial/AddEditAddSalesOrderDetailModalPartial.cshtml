@model SalesOrderDetails

<div class="modal fade" id="add-edit-salesorderdetail" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">

        <div class="modal-content">
            <form data-ajax-url="@ViewData["url"]"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-update="#add-edit-order-detail-modal">
                @* data-ajax-update="#add-edit-order-detail-modal" *@
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">
                        @{
                            await ViewContext.Writer.WriteAsync(string.IsNullOrEmpty(Model.ProductName) ? "New Item" : Model?.ProductName);
                        }
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-lg-12">
                            <label asp-for="ProductName"></label>
                            @await Component.InvokeAsync("ProductsCombobox", new { salesOrderDetails = Model })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <label asp-for="Qty"></label>
                            <input type="number" asp-for="Qty" placeholder="Quantity" class="form-control" />
                            <span asp-validation-for="Qty"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
@if (ViewData["isSuccess"] == null)
{
    <script>
        $(document).ready(function () {

            $('#add-edit-salesorderdetail').modal('show');


        })
    </script>
}
else
{
    <script>
        $(document).ready(function () {

            location.reload();


        })
    </script>
}

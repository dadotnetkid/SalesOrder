<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Web</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet"/>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="~/css/now-ui-dashboard.css" rel="stylesheet"/>

    <link href="~/css/demo/demo.css" rel="stylesheet"/>

</head>
<body class="">
<div class="wrapper ">
    <div class="sidebar" data-color="orange">
        <!--
        Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
        -->
        <div class="logo">
            <a href="http://www.creative-tim.com" class="simple-text logo-mini">
                SO
            </a>
            <a href="http://www.creative-tim.com" class="simple-text logo-normal">
                Sales Order
            </a>
        </div>
        <partial name="_sidebar.cshtml"/>
    </div>
    <div class="main-panel ps" id="main-panel">
        <!-- Navbar -->
        <partial name="_nav.cshtml"/>
        <!-- End Navbar -->
        <div class="panel-header panel-header-sm">
        </div>
        <div class="content">
            @RenderBody()
        </div>
        <partial name="_footer.cshtml"/>
        <div class="ps__rail-x" style="left: 0px; bottom: 0px;">
            <div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div>
        </div>
        <div class="ps__rail-y" style="top: 0px; right: 0px;">
            <div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div>
        </div>
    </div>
</div>

<!--   Core JS Files   -->
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/core/popper.min.js"></script>
<script src="~/js/core/bootstrap.min.js"></script>

<!--  Google Maps Plugin    -->
<script src="~/js/plugins/chartjs.min.js"></script>

<!--  Notifications Plugin    -->
<script src="~/js/plugins/bootstrap-notify.js"></script>
<script src="~/js/plugins/perfect-scrollbar.jquery.min.js"></script>
<!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
<script src="~/js/now-ui-dashboard.js?v=1.5.0" type="text/javascript"></script>
<script src="~/js/demo/demo.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/lib/jquery-unobtrusive-ajax/jquery.unobtrusive-ajax.min.js"></script>
@await RenderSectionAsync("Scripts", false)

</body>

</html>

@model List<SalesOrders>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><h5>Unsettled Orders</h5></div>
            <div class="card-body" id="unsettled-orders-container">

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        load();
    });

    function load() {
        showLoading();
        $.ajax({
            url: '@Url.Action("UnsettledOrdersPartial")',
            success: function (html) {
                $('#unsettled-orders-container').html(html);
                hideLoading();
            }
        })
    }
</script>
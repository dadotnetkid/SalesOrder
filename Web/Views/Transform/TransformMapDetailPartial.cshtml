@model TransformationMapsVM


<ejs-dialog header="Transform Details" width="700px" id="dialog" closeOnEscape="true" showCloseIcon="true" close="load()" created="created=function(){this.show() }">
    <e-content-template>
        <error-alert errors="@ViewData["Errors"]"></error-alert>
        <asp-form on-success="onSuccess" method-type="POST" action="@Url.Action("AddEditTransformMapDetail", new {transformationMapId = Model.TransformationMapId})">
            @Html.HiddenFor(x => x.TransformationMap.Id)
            <div class="row">
                <div class="col-lg-12">
                    <ejs-combobox ejs-for="TransformationMap.SourceProductId" dataSource="Model?.Products" id="SourceProductId" cssClass="e-outline" placeholder="Source">
                        <e-combobox-fields text="ProductName" value="Id"></e-combobox-fields>
                    </ejs-combobox>
                    <span asp-validation-for="TransformationMap.SourceProductId" class="text-danger"></span>
                    <ejs-combobox ejs-for="TransformationMap.DestinationProductId" dataSource="Model?.Products" id="DestinationProductId" cssClass="e-outline" placeholder="Destination">
                        <e-combobox-fields text="ProductName" value="Id"></e-combobox-fields>
                    </ejs-combobox>
                    <span asp-validation-for="TransformationMap.DestinationProductId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ejs-numerictextbox ejs-for="TransformationMap.Quantity" id="Quantity" cssClass="e-outline" placeholder="Quantity">
                    </ejs-numerictextbox>

                </div>
            </div>
            <span asp-validation-for="TransformationMap.Quantity" class="text-danger"></span>
            <div class="row">
                <div class="col-lg-10">
                    <ejs-numerictextbox ejs-for="TransformationMap.ToleranceAmount" id="ToleranceAmount" cssClass="e-outline" placeholder="Tolerance Amount">
                    </ejs-numerictextbox>

                </div>
                <div class="col-lg-2"><ejs-checkbox ejs-for="TransformationMap.IsPercent" id="isPercent" label="Is Percent" cssClass="e-outline margin-top-10px"></ejs-checkbox></div>
            </div>
            <span asp-validation-for="TransformationMap.ToleranceAmount" class="text-danger"></span>
            <div class="row">
                <div class="col-lg-12">
                    <button class="btn btn-success" type="submit">Save</button>
                </div>
            </div>
        </asp-form>
    </e-content-template>
</ejs-dialog>
<ejs-scripts></ejs-scripts>
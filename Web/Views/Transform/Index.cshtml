
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><h5>Transformation Map</h5></div>
            <div class="card-body" id="transform-grid-container">

            </div>
        </div>
    </div>
</div>
<div id="transform-detail-container"></div>
<script>
    $(document).ready(function () {
        load();
    })

    function load() {
        showLoading();
        $.get('@Url.Action("TransformMapGridPartial")',
            function(xhr) {
                $('#transform-grid-container').html(xhr);
                hideLoading();
            })
    }

    onSuccess = function (xhr) {
        $('#dialog').remove();
        if (xhr.isSuccess !== true) {
            $('#transform-detail-container').html(xhr);
        }
        load();
    }
</script>
@model List<SalesOrders>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <button class="btn btn-info" onclick="showModalDetail('@Url.Action("PaymentSalesOrderDetail")', {}, '#modal-container','#dialog')">
                            Bulk Payment
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Order # </th>
                                    <th>Customer Name</th>
                                    <th>Total</th>
                                    <th>Amount Paid</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.OrderNumber</td>
                                        <th>@i.CustomerName</th>
                                        <td>@i.TotalAmount</td>
                                        <td>@i.AmountPaid</td>
                                        <td>@i.Balance</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div id="modal-container"></div>
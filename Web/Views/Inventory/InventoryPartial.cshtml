@model System.Collections.Generic.List<Data.Models.Inventory>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <button class="btn btn-info" onclick="showModalDetail('@Url.Action("PaymentSalesOrderDetail")', {}, '#modal-container','#dialog')">
                            Transform
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Product Name</th>
                                    <th>from</th>
                                    <th>UOM</th>
                                    <th>QTY</th>
                                    <th>to</th>
                                    <th>UOM</th>
                                    <th>QTY</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.Products.ProductName</td>
                                        <td></td>
                                        <th>@i.UOM</th>
                                        <td>@Math.Abs(i.QTY)</td>
                                        <td></td>
                                        <th>@i.TransformedInventory?.UOM</th>
                                        <td>@i.TransformedInventory?.QTY</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>